<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane id="AnchorPane" prefHeight="300.0" prefWidth="350.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.141" fx:controller="library.assistant.editbook.EditbookController">
   <children>
      <HBox alignment="CENTER" prefHeight="350.0" prefWidth="300.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="CENTER" prefHeight="400.0" prefWidth="250.0" spacing="10.0">
               <children>
                  <JFXTextField fx:id="bookFeild" labelFloat="true" layoutX="10.0" layoutY="195.0" promptText="Book ID" />
                  <JFXTextField fx:id="titleField" labelFloat="true" promptText="Book  Title" />
                  <JFXTextField fx:id="authorField" labelFloat="true" layoutX="10.0" layoutY="210.0" promptText="Author" />
                  <JFXTextField fx:id="publisherField" labelFloat="true" layoutX="10.0" layoutY="226.0" promptText="Publisher" />
                  <HBox alignment="CENTER" prefHeight="70.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <JFXButton fx:id="updateBtn" onAction="#updateBook" prefHeight="36.0" prefWidth="130.0" text="Save" />
                        <JFXButton fx:id="cancelBtn" layoutX="70.0" layoutY="27.0" onAction="#closeWindow" prefHeight="36.0" prefWidth="130.0" text="Cancel" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
